<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/WhatRolesSuitYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pt_sans_bold"
        android:text="What\nrole suits you?"
        android:textColor="@color/black"
        android:textSize="48dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ToggleButton
        android:id="@+id/EmployerButton"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:drawableTop="@drawable/ic_employer_toggle"
        android:textOff=""
        android:textOn=""
        android:background="@null"
        android:scaleType="fitCenter"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <ToggleButton
        android:id="@+id/EmployeeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_employee_toggle"
        android:textOff=""
        android:textOn=""
        android:background="@null"
        android:scaleType="fitCenter"/>

</LinearLayout>