<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:gravity="start">

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@raw/ic_back"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans_bold"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="48dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:src="@raw/ic_email"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We've send you a code to\nyour active email."
            android:textColor="@color/dark_grey"
            android:textSize="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/EmailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="xxxxxx1234@hotmail.com"
            android:textColor="@color/dark_grey"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:weightSum="3" >

            <EditText
                android:id="@+id/CodeEditText1"
                android:layout_width="68.15dp"
                android:layout_height="68.15dp"
                android:ems="1"
                android:inputType="text"
                android:textSize="20dp"
                android:background="@drawable/background_grey"
                android:padding="20dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/CodeEditText2"
                android:layout_width="68.15dp"
                android:layout_height="68.15dp"
                android:ems="1"
                android:inputType="text"
                android:textSize="20dp"
                android:background="@drawable/background_grey"
                android:padding="20dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/CodeEditText3"
                android:layout_width="68.15dp"
                android:layout_height="68.15dp"
                android:ems="1"
                android:inputType="text"
                android:textSize="20dp"
                android:background="@drawable/background_grey"
                android:padding="20dp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/CodeEditText4"
                android:layout_width="68.15dp"
                android:layout_height="68.15dp"
                android:ems="1"
                android:inputType="text"
                android:textSize="20dp"
                android:background="@drawable/background_grey"
                android:padding="20dp"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/VerifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_black"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle" />

        <TextView
            android:id="@+id/ResendCodeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Resend Code"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:clickable="true"
            android:gravity="center" />

    </LinearLayout>
</FrameLayout>